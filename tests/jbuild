(jbuild_version 1)

(executable
 ((name main)
  (modules Main)
  (libraries (ppx_regexp.pcre ppx_regexp.tyre ocaml-migrate-parsetree))))

(executables
 ((names (test_regexp))
  (modules (test_regexp))
  (libraries (ppx_regexp_internal qcheck))))

(executables
 ((names (test_ppx_regexp_pcre))
  (modules (test_ppx_regexp_pcre))
  (libraries (re re.perl))
  (preprocess (pps (ppx_regexp.pcre)))))

(alias
 ((name runtest)
  (deps (test_regexp.exe))
  (action (run ${<}))))

(alias
 ((name runtest)
  (deps (test_ppx_regexp_pcre.exe))
  (action (run ${<}))))
